{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "MyTask",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I../include",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        },
        {
            "type": "shell",
            "label": "Multiple Source File Build",
            "command": "/usr/bin/g++",
            "args": [
                "-I../include",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}